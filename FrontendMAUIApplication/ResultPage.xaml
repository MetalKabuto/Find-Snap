<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontendMAUIApplication.ResultPage"
             Title="ResultPage">
    <VerticalStackLayout
            Padding="30,0"
            Spacing="25" >
        <Label 
            x:Name="ratioText"
            Text="Result text here!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            x:Name="resultText"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
                x:FieldModifier="public"
                x:Name="ReturnBtn"
                Text="Return to game" 
                SemanticProperties.Hint="Goes back to the main window"
                Clicked="ReturnBtn_Clicked"
                HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>